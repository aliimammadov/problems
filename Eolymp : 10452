#include <iostream>
using namespace std;

long long yoxla(long long n) {
    if(n%2==1)
        return (n*n-1)/2;
    return n*n/2;
    
}

int main() {
    long long n;
    cin >> n;
    for (long long i = 0; i < n; i++) {
        long long a;
        cin >> a;
        cout << yoxla(a) << endl;
    }
    return 0;
}
